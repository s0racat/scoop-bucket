{
    "version": "0.0.3",
    "description": "NOTONOTO は、Noto Sans Mono と Noto Sans JP を合成したプログラミング向けフォントです。",
    "homepage": "https://github.com/yuru7/NOTONOTO",
    "license": "SIL Open Font License 1.1",
    "url": "https://github.com/yuru7/NOTONOTO/releases/download/v0.0.3/NOTONOTO_v0.0.3.zip",
    "pre_install": [
        "Move-Item \"$dir\\NOTONOTO_v$version\\*\" \"$dir\" -ErrorAction SilentlyContinue",
        "Remove-Item -Recurse \"$dir\\NOTONOTO_v$version\""
    ],
    "installer": {
        "script": [
            "$fonts = (New-Object -ComObject Shell.Application).Namespace(0x14)",
            "dir \"$dir/NOTONOTOConsole/*.ttf\" | %{ $fonts.CopyHere($_.fullname) }"
        ]
    },
    "uninstaller": {
        "script": [
            "if ($cmd -eq \"uninstall\") {",
            "    Write-Host \"To uninstall it completely, you have to delete it from the fonts in the control panel, which can be launched with `e[1;33m'control fonts'`e[0m.\"",
            "}"
        ]
    }
}
