{
    "version": "3.0.0",
    "description": " IBM Plex Mono と IBM Plex Sans JP を合成したプログラミングフォント PlemolJP (プレモル ジェイピー) ",
    "homepage": "https://github.com/yuru7/PlemolJP/",
    "license": "SIL Open Font License 1.1",
    "url": "https://github.com/yuru7/PlemolJP/releases/download/v3.0.0/PlemolJP_v3.0.0.zip",
    "pre_install": [
        "Move-Item \"$dir\\PlemolJP_v$version\\*\" \"$dir\" -ErrorAction SilentlyContinue",
        "Remove-Item -Recurse \"$dir\\PlemolJP_v$version\""
    ],
    "installer": {
        "script": [
            "$fonts = (New-Object -ComObject Shell.Application).Namespace(0x14)",
            "dir \"$dir/PlemolJP/*.ttf\" | %{ $fonts.CopyHere($_.fullname) }"
        ]
    },
    "uninstaller": {
        "script": [
            "if ($cmd -eq \"uninstall\") {",
            "    Write-Host \"To uninstall it completely, you have to delete it from the fonts in the control panel, which can be launched with `e[1;33m'control fonts'`e[0m.\"",
            "}"
        ]
    }
}
